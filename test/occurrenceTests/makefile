TEST_SRC = occurrenceTests.c
SRC = $(wildcard ../../src/*.c)

CFLAGS = -std=c11  -Wall -mtune=native -fopenmp -mavx2 -O0 -g
LDLIBS = ../../build/libfastavector_static.a ../../build/libdivsufsort64.a

EXE = occurrenceTests.out

backtraceTest: $(SRC)
	gcc $(TEST_SRC) $(SRC) -o $(EXE) $(CFLAGS) $(LDLIBS)

.PHONY: clean
clean:
	rm -f $(EXE)